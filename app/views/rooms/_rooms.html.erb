<h3 class="text-dark mb-0 mt-3">
  Channels
</h3>

<hr class="mt-1">

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link text-white' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-dark">
    No Channels
  </div>
<% end %>

<div class="mt-3">
  <%= link_to new_room_path, class: 'btn btn-danger' do %>
    New Channel
  <% end %>
</div>
